- if @dataset || @agent || @taxon || @kingdom || @start_year || @end_year
  %div{class: "alert alert-warning", role: "alert"}
    - if @dataset
      %div
        %i{class:"fas fa-filter"}
        Filtered by
        %span{class:"font-weight-bold mr-2"}
          #{@dataset.title.truncate(125, separator: ' ')}
        %a{href: "#{@dataset.license}", itemprop: "license"}
          %img{src:"#{@dataset.license_icon("small")}"}
        %a{href: url("#{locals[:url]}?agent_id=#{params[:agent_id]}&taxon_id=#{params[:taxon_id]}&kingdom=#{params[:kingdom]}&start_year=#{params[:start_year]}&end_year=#{params[:end_year]}&datasetKey="), class:"ml-2 text-danger"}
          %i{class:"fas fa-minus-circle"}
          = I18n.t('general.remove')
    - if @agent
      %div
        %i{class:"fas fa-search"}
        Searched for
        %span{class:"font-weight-bold mr-2"}
          #{@agent.fullname_reverse}
        %a{href: url("#{locals[:url]}?datasetKey=#{params[:datasetKey]}&taxon_id=#{params[:taxon_id]}&kingdom=#{params[:kingdom]}&start_year=#{params[:start_year]}&end_year=#{params[:end_year]}&agent_id="), class:"ml-2 text-danger"}
          %i{class:"fas fa-minus-circle"}
          = I18n.t('general.remove')
    - if @kingdom
      %div
        %i{class:"fas fa-filter"}
        Filtered by
        %span{class:"font-weight-bold mr-2"}
          #{@kingdom}
        %a{href: url("#{locals[:url]}?datasetKey=#{params[:datasetKey]}&agent_id=#{params[:agent_id]}&taxon_id=#{params[:taxon_id]}&start_year=#{params[:start_year]}&end_year=#{params[:end_year]}&kingdom="), class:"ml-2 text-danger"}
          %i{class:"fas fa-minus-circle"}
          = I18n.t('general.remove')
    - if @taxon
      %div
        %i{class:"fas fa-filter"}
        Filtered by
        %span{class:"font-weight-bold mr-2"}
          #{@taxon.family}
        %a{href: url("#{locals[:url]}?datasetKey=#{params[:datasetKey]}&agent_id=#{params[:agent_id]}&kingdom=#{params[:kingdom]}&start_year=#{params[:start_year]}&end_year=#{params[:end_year]}&taxon_id="), class:"ml-2 text-danger"}
          %i{class:"fas fa-minus-circle"}
          = I18n.t('general.remove')
    - if @start_year
      %div
        %i{class:"fas fa-filter"}
        Filtered by
        %span{class:"font-weight-bold mr-2"}
          #{@start_year}
        %a{href: url("#{locals[:url]}?datasetKey=#{params[:datasetKey]}&agent_id=#{params[:agent_id]}&kingdom=#{params[:kingdom]}&taxon_id=#{params[:taxon_id]}&end_year=#{params[:end_year]}&start_year="), class:"ml-2 text-danger"}
          %i{class:"fas fa-minus-circle"}
          = I18n.t('general.remove')
    - if @end_year
      %div
        %i{class:"fas fa-filter"}
        Filtered by
        %span{class:"font-weight-bold mr-2"}
          #{@end_year}
        %a{href: url("#{locals[:url]}?datasetKey=#{params[:datasetKey]}&agent_id=#{params[:agent_id]}&kingdom=#{params[:kingdom]}&taxon_id=#{params[:taxon_id]}&start_year=#{params[:start_year]}&end_year="), class:"ml-2 text-danger"}
          %i{class:"fas fa-minus-circle"}
          = I18n.t('general.remove')

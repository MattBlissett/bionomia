-content_for :title do
  #{@taxon.family} Agents

- content_for :scripts do
  %script{src: "/js/application.js"}
  :javascript
    $(function() {
      Application.init("", "GET", "/taxa");
    });

- content_for :jumbotron do
  = haml :'partials/taxa/jumbotron_agents', layout: false

- if admin_authorized?
  %div{class:"mt-3 mb-3 pt-3 border-top text-right"}
    %a{href: url("/admin/taxon/#{@taxon.family}")}
      %i{class:"fas fa-cog"}
      = I18n.t('general.settings')

= haml :'partials/taxa/tabs', layout: false, locals: { active_tab: locals[:active_tab] }
= haml :'partials/taxa/agent_nav', layout: false, locals: { active_subtab: locals[:active_subtab] }

- if @results.size == 0
  %div{class: "alert alert-info tiny-margins", role: "alert"}= I18n.t('taxa.no_agents', taxon: h(@taxon.family))
- else
  %div{class: "row"}
    - @results.in_groups_of(25, false).each do |group|
      %div{class: "col-12 col-sm-3 mb-3"}
        %ul{class: "list-unstyled m-2"}
          - group.each do |a|
            %li
              %a{href: url("/agent/#{a.id}?taxon=#{@taxon.family}")} #{a.fullname_reverse}

  - if @pagy.pages > 1
    %div{style:"overflow-y:scroll"}
      = pagy_bootstrap_nav(@pagy)

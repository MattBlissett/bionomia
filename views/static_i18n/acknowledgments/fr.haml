-content_for :title, I18n.t('acknowledgments.acknowledgments_title')

-content_for :scripts do
  %script{src: "//crowdin.com/js/crowdjet/crowdjet.js"}
  :javascript
    $(function() {
      var checkExist = setInterval(function() {
        if ($('#crowdjet-expand-container').children().length > 0) {
          $('#crowdjet-container').css("position", "relative");
          $('#crowdjet-expand-container').css("position", "absolute");
          $('#crowdin-widget').show();
          clearInterval(checkExist);
        }
      }, 1000);
    });

-content_for :jumbotron do
  %div{class:"jumbotron jumbotron-fluid d-flex flex-wrap"}
    %div{class:"mr-auto p-2"}
      %h1{class:"h2"}= I18n.t('acknowledgments.acknowledgments_title')

%div{class:"row mt-4"}
  %div{class:"col-12 col-md-6 mb-3"}
    %div{class:"card"}
      %div{class:"card-header border-bottom"}
        %h4= I18n.t('acknowledgments.taxon_silhouettes')

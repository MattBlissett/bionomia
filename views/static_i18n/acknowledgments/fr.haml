          %a{href: "http://phylopic.org/image/cb9f4a84-068b-4ac4-b0ca-1b6da752817a/"}
            %img{src:"/images/a79e6610-2a32-4797-8281-02e8640f3b57.128.png", alt:"PhyloPic Silhouette", class:"p-2"}
          %a{href: "http://phylopic.org/image/ef34e872-7ba3-4836-bbd3-844351d895c2/"}
            %img{src:"/images/ef34e872-7ba3-4836-bbd3-844351d895c2.128.png", alt:"PhyloPic Silhouette", class:"p-2"}
          %a{href: "http://phylopic.org/image/7ebbf05d-2084-4204-ad4c-2c0d6cbcdde1/"}
            %img{src:"/images/7ebbf05d-2084-4204-ad4c-2c0d6cbcdde1.128.png", alt:"PhyloPic Silhouette", class:"p-2"}
          %a{href: "http://phylopic.org/image/7e3829c6-6587-4df7-a514-29e3f8f2c40d/"}
            %img{src:"/images/7e3829c6-6587-4df7-a514-29e3f8f2c40d.128.png", alt:"Phylopic Silhouette", class:"p-2"}

  %div{class: "col-12 col-md-6 mb-3"}
